<%= form_for(@user, :controller => :users, :action => :update, :html => {:multipart => true}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
     <%= f.label :bio %><br />
     <%= f.text_area :bio, :size => "30x10" %>
  </div>

  <div class="field">
	<%= f.file_field :avatar %>
  </div>

  <%= f.fields_for :my_skills do |builder| %>

	  <div class="ui-widget">
	    <%= builder.label :skill %><br />
		<%= builder.text_field :tag, :class => "skill" %>
	  </div>

	  <div class="field">
		<%= builder.label :description %><br />
		<%= builder.text_area :description, :size => "30x10" %>
	  </div>
  <% end %>

  <div class="actions">
     <%= f.submit "Update Profile" %>
  </div>

<% end %>