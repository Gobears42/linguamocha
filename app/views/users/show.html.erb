<div class="content-left grid_6">

  <div class="person">	
		<h1 class="name"><%= @user.name %></h1>

    <div class="prof_pic">
  		<% if false #@user.avatar_file_name %>
  			<%= image_tag @user.avatar.url, :class => "prof_image" %>
  		<% else %>
  			<%= image_tag "empty.png", :class => "prof_image" %>
  		<% end %><br />
    </div>
  	
  	<% if @user == current_user %>
  		<%= link_to "Edit Profile", edit_user_path(@user.username), :class => "edit"%><br />
  	<% else %>
  		<%= link_to "Ask for Help", new_request_path(:sender_id => @current_user.id, :receiver_id => @user.id)%>
  	<% end %>
  </div>

  <p class="occupation"><b>Occupation:</b><%= @user.occupation %></p>
  <p class="education"><b>Education:</b><%= @user.college %>, <i><%= @user.degree %></i></p>

  <div class="reference_group grid_5">
    <h3>Latest Feedback</h3>
    <% if @user.reviews_received != [] %>
      <% @user.reviews_received.each do |r|%>
        <div class="reference grid_5">
          <div class="reviewer">
              <h5><%= link_to "#{r.sent_by.name}", user_path(r.sent_by.username), :class => "reviewer-name" %></h5>
            </a>
          </div>

          <div class="review">
            <p><%= r.body %></p>
          </div>
        </div>
      <% end %>
    <% else %>
    <div class="reference grid_5">
      <p>No reviews have been written</p>
     </div>
    <% end %>
  </div>
</div>

<div class="skills grid_6">
	<div class="label grid_6">
		<h3>Skills</h3>
  </div>

  <div class="label_responses grid_4">
		<% if @user.my_skills != [] %>
			<% @user.my_skills.each do |skill| %>
        <div class="skill">
			    <p class="skill-name"><%= skill.tag %></p> 
			    <p class="skill_description"><%= skill.description %></p>
        </div>
			<% end %>
		<% else %>
			<p class="skill_description">No skills listed</p>
		<% end %>
  </div>
</div>

<div class="currently_learning grid_6">
	<div class="label grid_6">
		<h3>Currently Learning</h3>
	</div>

  <div class="label_responses grid_4">
	<% if @user.interests != [] %>
		<% @user.interests.each do |i| %>
    <div class="skill">
			<p class="skill-name"><%= i.tag%></p>
      <p class="skill_description"></p>
    </div>
		<% end %>
	<% else %>
		<p class="learn_description">Not learning anything at the moment</p>
	<% end %>
  </div>
</div>




  <div class="bio grid_6">    
    <h3>Personal Bio</h3>
    <% if @user.bio %>
      <p><%= @user.bio %></p>
    <% else %>
      <i>No bio given</i>
    <% end %>
  </div>
	
	



