	<td>
		<div class="ui-widget">
	    	<%#= f.label :skill %><br />
	    	<%= f.text_field :tag, :class => "skill" %>
	  	</div>
	</td>

	<td>
		<div class="field">
	 		<%#= f.label :description %><br />
