<h1>Sending a Request</h1>

<%= nested_form_for(@request, :url => {:controller => :requests, :action => :create}) do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% @request.errors.each_with_index.each do |msg, i| %>
        <li><%= msg[1] %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
	<%= f.label :title %>
	<%= f.text_field :title %>
  </div>

  <div class="field">
	<%= f.label :from %>
	<%= f.text_field :start_time %>
  </div>

  <div class="field">
	<%= f.label :to %>
	<%= f.text_field :end_time %>
  </div>

  <div class="datepicker">
	<%= f.label :date %>
	<%= f.text_field :date %>
  </div>

  <%= "Find cafes and restaurants near: " %>
  <input type="text" id="find" value='<%= "#{@location}" %>'>
  <a href="#" class="find">Find Locations</a>
  Not your city? Type in your city and find locations now!

  <div class="locations">
	<%= f.label :location %>
  </div>

  <%= f.fields_for :messages do |builder| %>
	<%= builder.label :message %>
	<%= builder.text_area :body, :size => "40x10" %>
  <% end %>

  <%= f.hidden_field :sender_id %>
  <%= f.hidden_field :receiver_id %>

  <div class="actions">
     <%= f.submit "Create Request" %>
  </div>

<% end %>