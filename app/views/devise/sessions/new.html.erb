
<h2 id="sign_in">Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="email_sign_in"><%= f.label :email %>
    <%= f.email_field :email %></div>

  <div class="password_sign_in"><%= f.label :password %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="remember_me"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :id => "sign_in_submit" %></div>
<% end %>

<%= render "devise/shared/links" %>
