
<div class="fixed_bar">
	<div class="header_container">
		
	<%= link_to(image_tag("logo.png", :class => "logo"), root_url) %>
	
	<% if user_signed_in? %>
		<%= form_tag :controller => 'users', :action => 'search' do %>
		  <%= text_field_tag :search, params[:search], :id => 'search_bar' %>
	      <%= submit_tag "Search", :name => nil, :id => "search_button" %> 
	    <% end %>
	<% end %>
		
		<div id="nav_container">
			<nav>
				<ul>
					<% if user_signed_in? %>
						<li><%= link_to "Profile", user_path(current_user.username)%></li>
						<li><a href="#">Find People</a></li>
						<li><%= link_to "Requests", requests_path %></li>
						<li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
					<% else %>
						<li><%= link_to "Sign In", new_user_session_path %></li> or
						<li><%= link_to "Sign Up", new_user_registration_path %></li>
					<% end %>
				</ul>
			</nav>
		</div>		

	</div>
</div>
